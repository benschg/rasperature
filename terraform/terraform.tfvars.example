# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# GCP Project Configuration
project_id  = "your-gcp-project-id"
region      = "us-central1"  # Choose: us-central1, us-east1, europe-west1, asia-northeast1
environment = "dev"          # Choose: dev, staging, prod

# Pub/Sub Configuration
pubsub_topic_name = "sensor-data-raw"

# BigQuery Configuration
bigquery_dataset_id = "sensor_data"
bigquery_table_id   = "readings"
data_retention_days = 90  # Days to retain data (affects cost)

# Bigtable (optional, for real-time queries)
enable_bigtable = false  # Set to true if you need <10ms query latency

# Cloud Run API Configuration
cloud_run_api_image = "gcr.io/your-gcp-project-id/rasperature-api:latest"
api_max_instances   = 10  # Maximum number of instances
api_min_instances   = 0   # Minimum instances (0 = scale to zero when idle)
